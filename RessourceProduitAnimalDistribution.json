{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "Produit d'assurance d'animaux",
    "description" : "",
    "termsOfService" : "http://swagger.io/terms/",
    "contact" : {
      "email" : "apiteam@swagger.io"
    },
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths" : {
    "/animal/pre-souscription" : {
      "post" : {
        "description" : "Informe d'un d√©but de parcours de souscription ",
        "operationId" : "preSouscription",
        "requestBody" : {
          "content" : {
            "*/*" : {
              "schema" : {
                "$ref" : "#/components/schemas/DebutParcoursAnimal"
              }
            }
          }
        },
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "*/*" : {
                "schema" : {
                  "$ref" : "#/components/schemas/SouscriptionAnimal"
                }
              }
            }
          }
        }
      }
    },
    "/animal/offre" : {
      "post" : {
        "description" : "Consulter l'offre (wording, visuels)",
        "operationId" : "offre",
        "requestBody" : {
          "content" : {
            "*/*" : {
              "schema" : {
                "$ref" : "#/components/schemas/Produit"
              }
            }
          }
        },
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "*/*" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Offre"
                }
              }
            }
          }
        }
      }
    },
    "/animal/tarif" : {
      "post" : {
        "description" : "Demande de tarif",
        "operationId" : "tarif",
        "requestBody" : {
          "content" : {
            "*/*" : {
              "schema" : {
                "$ref" : "#/components/schemas/DemandeDeTarif"
              }
            }
          }
        },
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "*/*" : {
                "schema" : {
                  "$ref" : "#/components/schemas/TarifAnimal"
                }
              }
            }
          }
        }
      }
    },
    "/animal/documents" : {
      "post" : {
        "description" : "Demande d'IPID (DIPA) / FIP / NI",
        "operationId" : "documents",
        "requestBody" : {
          "content" : {
            "*/*" : {
              "schema" : {
                "$ref" : "#/components/schemas/Produit"
              }
            }
          }
        },
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "*/*" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Document"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Animal" : {
        "type" : "object",
        "properties" : {
          "typeAnimal" : {
            "type" : "string",
            "enum" : [ "Chien", "Chat" ]
          },
          "dateNaissance" : {
            "type" : "string",
            "format" : "date-time"
          }
        }
      },
      "Client" : {
        "type" : "object"
      },
      "SouscriptionAnimal" : {
        "type" : "object",
        "properties" : {
          "client" : {
            "$ref" : "#/components/schemas/Client"
          },
          "risque" : {
            "$ref" : "#/components/schemas/Animal"
          },
          "tarif" : {
            "$ref" : "#/components/schemas/TarifAnimal"
          }
        }
      },
      "TarifAnimal" : {
        "type" : "object",
        "properties" : {
          "periode" : {
            "type" : "string",
            "enum" : [ "Annuel", "Mensuel", "Trimestriel" ]
          },
          "montant" : {
            "type" : "number",
            "format" : "float"
          }
        }
      },
      "DebutParcoursAnimal" : {
        "type" : "object",
        "properties" : {
          "client" : {
            "$ref" : "#/components/schemas/Client"
          },
          "risque" : {
            "$ref" : "#/components/schemas/Animal"
          },
          "tarif" : {
            "$ref" : "#/components/schemas/TarifAnimal"
          }
        }
      },
      "Offre" : {
        "type" : "object"
      },
      "Produit" : {
        "type" : "object"
      },
      "DemandeDeTarif" : {
        "type" : "object"
      },
      "Document" : {
        "type" : "object"
      }
    }
  }
}