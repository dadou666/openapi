{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "Produit d'assurance vélo",
    "description" : "",
    "termsOfService" : "http://swagger.io/terms/",
    "contact" : {
      "email" : "apiteam@swagger.io"
    },
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "paths" : {
    "/nvei/documents" : {
      "post" : {
        "description" : "Demande d'IPID (DIPA) / FIP / NI",
        "operationId" : "documents",
        "requestBody" : {
          "content" : {
            "*/*" : {
              "schema" : {
                "$ref" : "#/components/schemas/Produit"
              }
            }
          }
        },
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "*/*" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Document"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/nvei/pre-souscription" : {
      "post" : {
        "description" : "Informe d'un début de parcours de souscription ",
        "operationId" : "preSouscription",
        "requestBody" : {
          "content" : {
            "*/*" : {
              "schema" : {
                "$ref" : "#/components/schemas/DebutParcoursNVEI"
              }
            }
          }
        },
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "*/*" : {
                "schema" : {
                  "$ref" : "#/components/schemas/SouscriptionNVEI"
                }
              }
            }
          }
        }
      }
    },
    "/nvei/offre" : {
      "post" : {
        "description" : "Consulter l'offre (wording, visuels)",
        "operationId" : "offre",
        "requestBody" : {
          "content" : {
            "*/*" : {
              "schema" : {
                "$ref" : "#/components/schemas/Produit"
              }
            }
          }
        },
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "*/*" : {
                "schema" : {
                  "$ref" : "#/components/schemas/Offre"
                }
              }
            }
          }
        }
      }
    },
    "/nvei/tarif" : {
      "post" : {
        "description" : "Demande de tarif",
        "operationId" : "tarif",
        "requestBody" : {
          "content" : {
            "*/*" : {
              "schema" : {
                "$ref" : "#/components/schemas/DemandeDeTarif"
              }
            }
          }
        },
        "responses" : {
          "default" : {
            "description" : "default response",
            "content" : {
              "*/*" : {
                "schema" : {
                  "$ref" : "#/components/schemas/TarifNVEI"
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Document" : {
        "type" : "object"
      },
      "Produit" : {
        "type" : "object"
      },
      "Client" : {
        "type" : "object"
      },
      "NVEI" : {
        "type" : "object",
        "properties" : {
          "type" : {
            "type" : "string",
            "enum" : [ "Giropode", "Overboard", "Trotinette" ]
          },
          "marque" : {
            "type" : "string"
          },
          "modele" : {
            "type" : "string"
          }
        }
      },
      "SouscriptionNVEI" : {
        "type" : "object",
        "properties" : {
          "client" : {
            "$ref" : "#/components/schemas/Client"
          },
          "risque" : {
            "$ref" : "#/components/schemas/NVEI"
          },
          "tarif" : {
            "$ref" : "#/components/schemas/TarifNVEI"
          }
        }
      },
      "TarifNVEI" : {
        "type" : "object",
        "properties" : {
          "periode" : {
            "type" : "string",
            "enum" : [ "Annuel", "Mensuel", "Trimestriel" ]
          },
          "montant" : {
            "type" : "number",
            "format" : "float"
          }
        }
      },
      "DebutParcoursNVEI" : {
        "type" : "object",
        "properties" : {
          "client" : {
            "$ref" : "#/components/schemas/Client"
          },
          "risque" : {
            "$ref" : "#/components/schemas/NVEI"
          },
          "tarif" : {
            "$ref" : "#/components/schemas/TarifNVEI"
          }
        }
      },
      "Offre" : {
        "type" : "object"
      },
      "DemandeDeTarif" : {
        "type" : "object"
      }
    }
  }
}